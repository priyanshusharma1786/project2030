<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Post Message</title>
</head>
<body>
  <div class="container">
    <header id="header">
      <%- include('partials/navbar', { currentPage: 'postMessage', user: user }) %>
    </header>
    <hr />
    <main role="main">
      <div class="card">
        <hr />
        <div class="card-body row g-3 align-items-center">
          <div class="col-md-2 card mb-3"></div>
          <div class="col-md-8 card mb-3">
            <form class="row bg-secondary" action="/addPost" method="POST">
              <fieldset>
                <legend class="text-center text-white h2">Post a Message</legend>
                <div class="col-md-10">
                  <label for="topic" class="form-label h4">Topic</label>
                  <select name="topic" id="topic" class="form-select" aria-label="Default select">
                    <option selected>Select a topic</option>
                    <option value="Programming">Programming</option>
                    <option value="Networking">Networking</option>
                    <option value="Security">Security</option>
                    <option value="General">General</option>
                  </select>
                </div>
                <div class="col-md-10">
                  <label for="message" class="form-label h4">Message</label>
                  <textarea id="message" name="message" class="form-control" rows="5" 
                    placeholder="Type your message" minlength="50" required></textarea>
                </div>
                <div class="col-md-10">
                  <label for="postedBy" class="form-label h4">Posted By</label>
                  <input name="by" id="postedBy" class="form-control" 
                    value="<%= user ? user.username : '' %>" <%= user ? 'readonly' : '' %> required/>
                </div>             
                <div class="col-md-10">   
                  <div class="card-footer text-center">           
                    <div class="btn-group" role="group" aria-label="Post Page">
                      <button type="reset" class="btn btn-danger">Clear</button>
                      <button type="submit" class="btn btn-warning">Submit</button>
                    </div>
                  </div>
                </div>
              </fieldset>
            </form>
          </div>
          <div class="col-md-2 card mb-3"></div>
        </div>
      </div>
    </main>
    <hr />
    <%- include('partials/footer') %>
  </div>
  <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>